{
    // Project metadata
    "name": "inflationcontrol",
    "version": "1.0.0",
    "description": "InflationControl - A TypeScript implementation",
    "main": "dist/index.js",
    "author": "mpermar082",
    "license": "MIT",

    // Scripts for project workflow
    "scripts": {
        "build": "tsc", // Compile TypeScript to JavaScript
        "start": "node dist/index.js", // Run compiled JavaScript
        "dev": "ts-node src/index.ts", // Run TypeScript code in development
        "test": "jest", // Run unit tests
        "clean": "rm -rf dist" // Clean compiled JavaScript output
    },

    // Project dependencies
    "dependencies": {
        "minimist": "^1.2.0" // CLI parsing library
    },

    // Project development dependencies
    "devDependencies": {
        "typescript": "^5.0.0", // TypeScript compiler
        "@types/node": "^18.0.0", // TypeScript definitions for Node.js
        "@types/minimist": "^1.2.0", // TypeScript definitions for minimist
        "ts-node": "^10.0.0", // TypeScript execution environment
        "jest": "^29.0.0", // Unit testing framework
        "@types/jest": "^29.0.0" // TypeScript definitions for Jest
    }
}